//Position
.scr
  width xl
  margin 0 auto
@media (max-width xl)
  .scr
    width 100%
.v-center
  vertical-align middle
.h-center
  margin 0 auto
.t-center
  text-align center
  
.abs-full
  position absolute!important
  top 0
  left 0
  width 100%
  height 100%
.expanded-full
  position fixed!important
  top 0
  left 0
  right 0
  bottom 0


