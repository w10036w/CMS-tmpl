// flex
// .gutter
//   margin-right -gutter
//   margin-left -gutter

@media (max-width xl)
  // layout
  .gutter
    margin-right 0
    margin-left 0

.flex
  display flex
.flex-c
  flex-direction column
.flex-cr
  flex-direction column-reverse
.flex-rr
  flex-direction row-reverse
.flex-w
  flex-wrap wrap
.flex-wr
  flex-wrap wrap-reverse
.flex-1
  flex: 1

.justify-c
  justify-content center
.justify-e
  justify-content flex-end
.justify-sa
  justify-content space-around
.justify-sb
  justify-content space-between

.align-c
  align-items center
.align-e
  align-items flex-end

.self-s
  align-self flex-start
.self-e
  align-self flex-end
.self-c
  align-self center
.self-stretch
  align-self stretch

//flex: <flex-grow> <flex-shrink> <flex-basis>
.flex-grow-1
  flex-grow 1
.flex-grow-2
  flex-grow 2
.flex-grow-3
  flex-grow 3


// table
.table
  display table
  width 100%
  .cell
    display table-cell

// float    
.float
  &:after
    content ''
    visibility hidden
    display block
    height 0
    clear both
  >[class^=c-]
    float left
.clearfix
  clear both
.left
  float left!important
.right
  float right!important
