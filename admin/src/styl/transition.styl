// add this to the classList of target dom
for ts in (3..12)
  .trans-{ts}
    transition-property all 
    transition-duration (ts / 10)s
    transition-timing-function ease

// simulate animate.css
.fade-enter, .fade-leave-active
  opacity: 0
.slideRight-enter, .slideRight-leave
  opacity 0
  transform translateX(5%)
.slideRight-in-enter
  opacity 0
  transform translateX(5%)
.slideLeft-enter, .slideLeft-leave
  opacity 0
  transform translateX(-5%)
.slideDown-enter, .slideDown-leave
  opacity 0
  transform translateY(5%)
.slideUp-enter, .slideUp-leave
  opacity 0
  transform translateY(-5%)

.zoomIn-enter, .zoomIn-leave
  transform scale(.8)
.zoomOut-enter, .zoomOut-leave
  transform scale(1.2)

// Special
.modal-enter, .modal-leave-active
.dialog-enter, .dialog-leave-active
  opacity 0
.modal-enter .modal, .modal-leave-active .modal,
.dialog-enter .dialog, .dialog-leave-active .dialog
  transform scale(1.1)
